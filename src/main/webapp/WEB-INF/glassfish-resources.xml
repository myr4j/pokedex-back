<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://www.glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <!-- DataSource pour H2 in-memory -->
    <jdbc-connection-pool 
        name="H2Pool" 
        res-type="jakarta.sql.DataSource"
        datasource-classname="org.h2.jdbcx.JdbcDataSource">
        <property name="URL" value="jdbc:h2:mem:starterdb"/>
        <property name="User" value="sa"/>
        <property name="Password" value=""/>
    </jdbc-connection-pool>
    
    <jdbc-resource 
        enabled="true" 
        jndi-name="jdbc/starter" 
        object-type="user" 
        pool-name="H2Pool"/>
</resources>

